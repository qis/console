      "yellow": "#ebd99c",
      "blue": "#5da9f6",
      "purple": "#e86aff",
      "cyan": "#82fff7",
      "white": "#dcdcdc",
      "brightBlack": "#787878",
      "brightRed": "#f58c80",
      "brightGreen": "#ddf88f",
      "brightYellow": "#eee5b2",
